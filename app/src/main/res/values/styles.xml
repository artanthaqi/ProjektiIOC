<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorPrimaryRed</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="buttonStyle">@style/ButtonGradient</item>

    </style>

    <style name="ButtonGradient" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradientbtn</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorPrimaryRed</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

</resources>
